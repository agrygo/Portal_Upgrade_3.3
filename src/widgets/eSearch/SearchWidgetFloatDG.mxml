			/* Created 7/13/2011 PWA Creating a XML object containing the to populate to the tblSearchResults table in the SQL Server */
			private function createAttributeXMLFile(dataGrid:DataGrid):XML
			{
				try
				{
					var columnArray:Array = dataGrid.columns.toArray();
					var columnCount:int = columnArray.length;
					var dataGridColumn:GridColumn;
					var headerGenerated:Boolean = false;
					
					var dataProvider:Object = ObjectUtil.copy(dataGrid.dataProvider);
					var cursor:IViewCursor = (dataProvider as ArrayCollection).createCursor();
					
					//Declaring the XML Nodes that will be used in the xml file generation
					var xmlDoc:XML =  <AttributeTable></AttributeTable>;
					var xmlColumns:XML = <Columns></Columns>;
					var xmlRows:XML= <Rows></Rows>;
					var xmlAttValues:XML = <Row></Row>;
					
					//loop through rows
					while (!cursor.afterLast)
					{
						xmlAttValues = <Row></Row>;
						var object:Object = null;
						object = cursor.current;
						//loop through all columns for the row
						for(var i:int = 0; i < columnCount; i++)
						{
							dataGridColumn = columnArray[i] as GridColumn;
							//Exclude column data which is invisible (hidden)
							if(!dataGridColumn.visible)
							{
								continue;
							}
							
							//Populate a value tag containing the field's value
							if(dataGridColumn.itemRenderer)
							{
								xmlAttValues.appendChild(XMLList("<Value>" + object[dataGridColumn.dataField] + "</Value>"));
							}else{
								xmlAttValues.appendChild(XMLList("<Value>" + dataGridColumn.itemToLabel(object) + "</Value>"));
							}
							
							//Populate the Columns tag with all columns inside of the datagrid
							//happens only on the first iteration of the loop
							if (!headerGenerated)
							{
								//Create a column node that will contain name of the column
								var xmlHeader:XML = <Column></Column>;
								
								//Ignore the gid field, auto generated by application, not a field
								//in the data grid
								if(dataGridColumn.headerText != "oid")
								{
									//Looping through all of the fields in the selected layer
									for(var cnt:int = 0; cnt<_layerDetails.fields.length; ++cnt)
									{
										var fld:Field = _layerDetails.fields[cnt];
										//Check to make sure that the alias of the field matches the datagrid column header text
										if(dataGridColumn.headerText == fld.alias)
										{
											//Populate the name and data type tags and append them to the column tag
											xmlHeader.appendChild(XMLList("<Name>" + dataGridColumn.headerText + "</Name>"));
											xmlHeader.appendChild(XMLList("<DataType>" + fld.type + "</DataType>"));
										}								
									}
								}
								//Populate the Column Tag to the Columns Tag
								xmlColumns.appendChild(xmlHeader);
							}
							
						}
						headerGenerated = true;
						xmlRows.appendChild(xmlAttValues);
						cursor.moveNext ();
					}
					//populate the Columns Tag and Rows Tag to the AttributeTable Tag
					xmlDoc.appendChild(xmlColumns);
					xmlDoc.appendChild(xmlRows);
					
					//set references to null:
					dataProvider = null;
					columnArray = null;
					dataGridColumn = null;
					return xmlDoc;		
				}
				
				catch(error:Error)
				{
					Alert.show(error.message);
					Alert.show(error.getStackTrace());
					return null;
				}
				return null;
			}
